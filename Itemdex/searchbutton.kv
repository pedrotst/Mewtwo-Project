#:kivy 1.0.9
#:import os os

<MySearchButtons>:
    orientation: 'vertical'
    GridLayout:
        cols: 3
        orientation: 'horizontal'
        size_hint: 1, .2
        Button:
            id: but_ag
            text: 'A-G'
            on_release: root.ag_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_hr
            text: 'H-R'
            on_release: root.hr_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_sz
            text: 'S-Z'
            on_release: root.sz_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_battle
            text: 'Battle'
            on_release: root.battle_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_berry
            text: 'Berries'
            on_release: root.berry_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_evo
            text: 'Evolution'
            on_release: root.evolution_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_fossil
            text: 'Fossil'
            on_release: root.fossil_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_hold
            text: 'Hold Item'
            on_release: root.holditem_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_key
            text: 'Key'
            on_release: root.key_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_mail
            text: 'Mail'
            on_release: root.mail_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_misc
            text: 'Misc'
            on_release: root.misc_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_ball
            text: 'Pokeball'
            on_release: root.pokeball_drop.open(self)
            size_hint: (.25, 1)
        Button:
            id: but_recovery
            text: 'Recovery'
            on_release: root.recovery_drop.open(self)
            size_hint: (.25, 1)

    ScrollView:
        FloatLayout:
            id: scroll_box
            size_hint_y: None
            width: root.width
            height: root.get_children_height(self)*2
            Scatter:
                id: img_scatter
                size_hint: None, None
                size: item_img.size
                pos: img_label.center_x + 10, self.parent.height - 60
                Image:
                    id: item_img
                    size_hint: None, None
                    height: 50
                    width: 50
                    source: os.path.join('Itens', 'Sprites', 'mewtwo.gif')
                    allow_stretch: False
                    #
#
            BoxLayout:
                id: big_box_id
                canvas.after:
                orientation: 'vertical' 
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    size: root.width, 60
                    Label:
                        text: 'Item Name:\n' + root.text_item
                        text_size: self.width, None
                        halign: 'justify'
                        font_size: 14
                    Label:
                        text: 'Type1:\n' + root.type1
                        text_size: self.width, None
                        halign: 'justify'
                        font_size: 14
                    Label:
                        text: 'Type 2:\n' + root.type2
                        text_size: self.width, None
                        halign: 'justify'
                        font_size: 14
                    Label:
                        text: 'Fling Damage: ' + str(root.fling)
                        text_size: self.width, None
                        font_size: 14
                    Label:
                        id: img_label
                        text: 'Sprite: '
                        text_size: self.width, None
                        font_size: 14


                BoxLayout:
                    size_hint_y: None
                    size: root.width, 40
                    orientation: 'horizontal'
                    Label:
                        text: 'Japanese Name:\n' + root.jap_name
                        font_name: 'TakaoPMincho.ttf'
                        text_size: self.width, None
                        font_size: 14
                    Label:
                        text: 'Translation:\n' + root.jap_transl
                        text_size: self.width, None
                        font_size: 14
                    Label:
                        text: 'Purchase Price: ' + str(root.purch_price)
                        text_size: self.width, None
                        font_size: 14
                    Label:
                        text: 'Sell Price: ' + str(root.sell_price)
                        text_size: self.width, None
                        font_size: 14

                BoxLayout:
                    size_hint: 1,None
                    height: version_id.font_size
                    Label:
                        id: version_id
                        text: 'Versions Available'
                        font_size: 14
                        color: 1,0,0,1
                GridLayout:
                    cols: 18
                    row_force_default: True
                    row_default_height: 12
                    rows: 2
                    size_hint: None, None
                    size: root.width,40
                    canvas:
                        Color:
                            rgba: 1,0,0,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text:'RGBY'
                    Label:
                        text:'GS'
                    Label:
                        text:'C'
                    Label:
                        text:'RS'
                    Label:
                        text:'E'
                    Label:
                        text:'FRLG'
                    Label:
                        text:'DP'
                    Label:
                        text:'Pt'
                    Label:
                        text:'HG'
                    Label:
                        text:'SS'
                    Label:
                        text:'B'
                    Label:
                        text:'W'
                    Label:
                        text:'B2'
                    Label:
                        text:'W2'
                    Label:
                        text:'X'
                    Label:
                        text:'Y'
                    Label:
                        text:'oR'
                    Label:
                        text:'aS'
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'rbitem.tiff') if root.versions_avail[0] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'citem.tiff')if root.versions_avail[1] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'citem.tiff')if root.versions_avail[2] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'frlgitem.tiff')if root.versions_avail[3] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'frlgitem.tiff')if root.versions_avail[4] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'frlgitem.tiff')if root.versions_avail[5] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[6] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[7] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[8] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[9] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[10] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[11] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[12] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[13] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[14] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[15] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[16] else os.path.join('Itens', 'Sprites', 'blank.tiff')
                    Image:
                        source: os.path.join('Itens', 'Sprites', 'dpitem.tiff')if root.versions_avail[17] else os.path.join('Itens', 'Sprites', 'blank.tiff')

                BoxLayout:
                    size_hint: 1, None
                    height: version_id.font_size
                    Label:
                        id: version_id
                        text: 'Flavour Text'
                        font_size: 14
                        color: 1,0,0,1
                BoxLayout:
                    id: flav_box
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: root.get_children_height(self)

                BoxLayout:
                    size_hint: 1, None
                    height: version_id.font_size
                    Label:
                        id: version_id
                        text: 'Locations'
                        font_size: 14
                        color: 1,0,0,1

                BoxLayout:
                    id: location_box
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: root.get_children_height(self)
                BoxLayout:
                    size_hint: 1, None
                    height: version_id.font_size
                    Label:
                        id: version_id
                        text: 'Shopping Details'
                        font_size: 14
                        color: 1,0,0,1

                BoxLayout:
                    id: shop_box
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: root.get_children_height(self)
                BoxLayout:
                    size_hint: 1, None
                    height: version_id.font_size
                    Label:
                        id: version_id
                        text: 'Pickup Details'
                        font_size: 14
                        color: 1,0,0,1
                BoxLayout:
                    id: pickup_box
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: root.get_children_height(self)
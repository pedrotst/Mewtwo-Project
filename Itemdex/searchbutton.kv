#:kivy 1.0.9
#:import os os

<MySearchButtons>:
    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, .07
#        width: .05
#        height: .25
#        canvas:
#            Color:
#                rgba: 0,0,1,.5
#            Rectangle:
#                pos: self.pos
#                size: self.size
        Button:
            id: but_ag
            text: 'A-G'
            on_release: root.ag_drop.open(self)
            size_hint: (.25, 1)
            pos_hint:
                {'top': 1,
                'left': 1}
        Button:
            id: but_hr
            text: 'H-R'
            on_release: root.hr_drop.open(self)
            size_hint: (.25, 1)
            pos_hint:
                {'top': 1,
                'center_x': .5}
        Button:
            id: but_sz
            text: 'S-Z'
            on_release: root.sz_drop.open(self)
            size_hint: (.25, 1)
            pos_hint:
                {'top': 1,
                'right': 1}

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            size: root.width, 60
            Label:
                text: 'Item Name:\n' + root.text_item
                text_size: self.width, None
                halign: 'justify'
                font_size: 14
            Label:
                text: 'Type1:\n' + root.type1
                text_size: self.width, None
                halign: 'justify'
                font_size: 14
            Label:
                text: 'Type 2:\n' + root.type2
                text_size: self.width, None
                halign: 'justify'
                font_size: 14
            Label:
                text: 'Fling Damage: ' + str(root.fling)
                text_size: self.width, None
                font_size: 14
            Scatter:
                Image:
                    id: item_img
                    size_hint: None, None
                    source: os.path.join('Itens', root.category,'Sprites', root.text_item + '.tiff')


        BoxLayout:
            size_hint_y: None
            size: root.width, 40
            orientation: 'horizontal'
            Label:
                text: 'Japanese Name:\n' + root.jap_name
                font_name: 'TakaoPMincho.ttf'
                text_size: self.width, None
                font_size: 14
            Label:
                text: 'Translation:\n' + root.jap_transl
                text_size: self.width, None
                font_size: 14
            Label:
                text: 'Purchase Price: ' + str(root.purch_price)
                text_size: self.width, None
                font_size: 14
            Label:
                text: 'Sell Price: ' + str(root.sell_price)
                text_size: self.width, None
                font_size: 14

        BoxLayout:
            size_hint: 1,None
            height: version_id.font_size
            Label:
                id: version_id
                text: 'Versions Available'
                font_size: 14
                color: 1,0,0,1
